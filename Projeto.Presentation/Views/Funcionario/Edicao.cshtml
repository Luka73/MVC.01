@model Projeto.Presentation.Models.FuncionarioEdicaoModel

@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edição de Funcionário</h2>
<a href="/Funcionario/Consulta">Volta pra consulta</a>
<hr />

@using (Html.BeginForm())
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    @Html.HiddenFor(model => model.IdFuncionario)

    <label>Nome: </label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-4" })
    <br />

    <label>Salário: </label>
    @Html.TextBoxFor(model => model.Salario, new { @class = "form-control col-md-4" })
    <br />

    <label>Data de Admissão: </label>
    @Html.TextBoxFor(model => model.DataAdmissao, Model.DataAdmissao.ToString("yyyy-MM-dd"), new { @class = "form-control col-md-4", @type = "date" })
    <br />

    <input type="submit" class="btn btn-success" value="Atualizar Funcionário">
    <br />
    <br />

    <strong>@TempData["Mensagem"]</strong>
}

